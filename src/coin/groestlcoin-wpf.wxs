<?else ?>
	<Media Id="1" Cabinet="x86.cab" EmbedCab="yes"/>

	<Component Id='CMP_Groestlcoin' Guid='0f8d7055-41f1-4558-a6c9-ba9eb2e39c6f' Directory='INSTALLDIR' >
